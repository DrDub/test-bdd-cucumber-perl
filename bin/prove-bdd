#!perl

use strict;
use warnings;

use Ouch;
use Test::BDD::Parser;
use Test::BDD::Executor;

my $feature = eval { Test::BDD::Parser->parse_file(
	't/fsets/parser/feature_parser.feature' ) };

if ( hug ) {
	warn $@->scalar;
	warn $@->data->debug_summary;
	die;
}

my $executor = Test::BDD::Executor->new();

$executor->add_steps();
$executor->execute( $feature );

